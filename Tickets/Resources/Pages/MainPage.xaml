<Page x:Class="Tickets.Resources.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tickets.Resources.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="770"
      Title="MainPage">

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Orientation="Vertical">
            <Button x:Name="btn_users" Content="Пользователи" Click="btn_users_Click"/>
            <Button x:Name="btn_races" Content="Рейсы" Click="btn_races_Click"/>
            <Button x:Name="btn_citys" Content="Остановки" Click="btn_citys_Click"/>
        </StackPanel>
        <StackPanel Orientation="Vertical">
            <Button x:Name="btn_autobus" Content="Автобусы" Click="btn_autobus_Click"/>
            <Button x:Name="btn_bilets" Content="Билеты"/>
            <Button x:Name="btn_itinerary" Content="Маршруты" Click="btn_itinerary_Click"/>
        </StackPanel>
    </StackPanel>
</Page>
