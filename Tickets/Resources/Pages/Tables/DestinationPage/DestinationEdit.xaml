<Page x:Class="Tickets.Resources.Pages.Tables.DestinationPage.DestinationEdit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tickets.Resources.Pages.Tables.DestinationPage"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="770"
      Title="DestinationEdit">

    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock x:Name="tb_header" Style="{StaticResource tb_head3}"/>
        <StackPanel Orientation="Horizontal" Margin="4" HorizontalAlignment="Right">
            <Label Content="Адрес точки остановки:" VerticalAlignment="Center" Margin="4 0"/>
            <TextBox x:Name="tb_adress" Text="{Binding Adress}" />
        </StackPanel>

        <Button x:Name="btn_save" Content="Сохранить" HorizontalAlignment="Right" Click="btn_save_Click"/>
    </StackPanel>
</Page>
