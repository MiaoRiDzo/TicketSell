<Page x:Class="Tickets.Resources.Pages.Tables.AutobusPage.AutobusEdit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tickets.Resources.Pages.Tables.AutobusPage"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="770"
      Title="AutobusEdit">

    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock x:Name="tb_header" Style="{StaticResource tb_head3}"/>
        <StackPanel Orientation="Horizontal" Margin="4" HorizontalAlignment="Right">
            <Label Content="Модель автобуса:" VerticalAlignment="Center" Margin="4 0"/>
            <TextBox x:Name="tb_busModel" Text="{Binding BusModel}" />
        </StackPanel>
    
        <StackPanel Orientation="Horizontal" Margin="4" HorizontalAlignment="Right">
            <Label Content="Номер автобуса:" VerticalAlignment="Center" Margin="4 0"/>
            <TextBox x:Name="tb_busNum" Text="{Binding BusNum}" />
        </StackPanel>

        <Button x:Name="btn_save" Content="Сохранить" HorizontalAlignment="Right" Click="btn_save_Click"/>
    </StackPanel>
</Page>
